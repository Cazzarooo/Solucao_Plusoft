@model IEnumerable<ChallengeSprint2.Models.Avaliacoes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaAvaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAvaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusAvaliacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaAvaliacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAvaliacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusAvaliacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAvaliacoes">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAvaliacoes">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAvaliacoes">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
